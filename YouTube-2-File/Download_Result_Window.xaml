<Window x:Class="YouTube_2_File.Download_Result_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTube_2_File"
        mc:Ignorable="d"
        Title="Download_Result_Window" Height="150" Width="240" WindowStyle="None" AllowsTransparency="True" Opacity="0.95" Loaded="Window_Loaded">

    <Window.Clip>
        <RectangleGeometry Rect="0,0,240,150" RadiusX="10" RadiusY="10"/>
    </Window.Clip>

    <Window.Background>
        <LinearGradientBrush StartPoint="0, 1" EndPoint="0.5, 1">
            <GradientStop Color="#FF2B2A2A" Offset="1"/>
            <GradientStop Color="#FF717171"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Rectangle Grid.ColumnSpan="9" Grid.RowSpan="2" MouseDown="Move_The_Window">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="0.5, 1">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF272323"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Button Grid.Column="7" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="5" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" Content="&#xEF2C;" FontSize="14" HorizontalAlignment="Right" Style="{StaticResource Button_With_Red_On_Hover_Effect}" Click="Close_The_Window">
            <Button.Foreground>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="0.5, 1">
                    <GradientStop Color="#FFD68A8A" Offset="1.3"/>
                    <GradientStop Color="Red"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>


        <TextBlock x:Name="Video_Conversion_Or_Download_result" Grid.Row="1" Grid.RowSpan="8" Grid.ColumnSpan="9" HorizontalAlignment="Center" VerticalAlignment="Center" Text="VIDEO CONVERSION SUCCESSFUL" FontSize="17" FontFamily="Impact">
            <TextBlock.Foreground>
                <LinearGradientBrush StartPoint="0, 1" EndPoint="0.5, 1">
                    <GradientStop Color="#FFC70F0F" Offset="1"/>
                    <GradientStop Color="#FF2F1111"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>

    </Grid>
</Window>
